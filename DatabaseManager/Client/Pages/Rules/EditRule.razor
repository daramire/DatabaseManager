@page  "/rules/edit/{SourceName}/{Id:int}"
@inject IRules rules
@inject NavigationManager navigationManager
@inject SingletonServices singleton

<h3>Edit Rule</h3>

@if (ruleModel != null)
{
    <EditRuleForm RuleToEdit="ruleModel" OnValidSubmit="Edit" />
}

@code {
    [Parameter] public int Id { get; set; }
    [Parameter] public string SourceName { get; set; }
    public RuleModel ruleModel;

    protected override async Task OnInitializedAsync()
    {
        ruleModel = await rules.GetRule(SourceName, Id);
    }

    private async Task Edit()
    {
        Console.WriteLine("Finished Editing");
        try
        {
            //string connectStr = Common.GetConnectionString(connectParameters);
            //Console.WriteLine(connectStr);
            //connectParameters.ConnectionString = connectStr;
            //await dataSources.UpdateSource(connectParameters);
            await rules.UpdateRule(ruleModel, singleton.TargetConnector, Id);
            navigationManager.NavigateTo("rules");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

}
